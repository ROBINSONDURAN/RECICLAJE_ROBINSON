
<!-- app/views/home/index.html.erb -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PÃ¡gina Principal</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

<div class="container mt-5">
    <h1 class="text-center">Bienvenido al Sistema de Reciclaje</h1>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card text-white bg-success mb-3">
                <div class="card-header text-center">Total de Recicladores</div>
                <div class="card-body">
                    <h5 class="card-title"><%= @total_recyclers %></h5>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-white bg-info mb-3">
                <div class="card-header text-center">Total de Entregas de Materiales</div>
                <div class="card-body">
                    <h5 class="card-title"><%= @total_deliveries %></h5>
                </div>
            </div>
        </div>
    </div>

    <% if @deliveries_by_material.present? %>
        <h2>Entregas por Tipo de Material</h2>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>Tipo de Material</th>
                    <th>Cantidad de Entregas</th>
                </tr>
            </thead>
            <tbody>
                <% @deliveries_by_material.each do |material_type, count| %>
                    <tr>
                        <td><%= material_type %></td>
                        <td><%= count %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    <% end %>

</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script> 
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script> 

</body>
</html>
